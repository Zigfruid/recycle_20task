<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="325dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUser"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/margor"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Margo Robbie"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/ivUser"
        app:layout_constraintStart_toEndOf="@id/ivUser"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="Stay at home"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/ivUser"
        app:layout_constraintBottom_toBottomOf="@id/ivUser"
        android:layout_marginStart="16dp"/>
    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/margor"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/ivLike"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_favorite_border_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/ivPost"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView

        android:id="@+id/ivSender"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toEndOf="@id/ivLike"
        android:background="@drawable/ic_near_me_black_24dp"
        app:layout_constraintTop_toTopOf="@id/ivLike"
        app:layout_constraintBottom_toBottomOf="@id/ivLike"
        android:layout_marginStart="8dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_more_vert_black_24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Harlie Queen : Suicide Squad"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/ivSender"
        app:layout_constraintBottom_toBottomOf="@id/ivSender"
        app:layout_constraintStart_toEndOf="@id/ivSender"
        android:textColor="@android:color/background_dark"/>

</androidx.constraintlayout.widget.ConstraintLayout>