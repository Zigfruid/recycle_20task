<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="325dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUser"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/kfc"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#a83232"
        android:textStyle="bold"
        android:text="KFC"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/ivUser"
        app:layout_constraintStart_toEndOf="@id/ivUser"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="Advertisement by KFC : Buy big ChickenFree"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/ivUser"
        app:layout_constraintBottom_toBottomOf="@id/ivUser"
        android:layout_marginStart="16dp"/>
    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/kfc3"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_more_vert_black_24dp"/>
    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="   Подробнее"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:background="#a83232"
        app:layout_constraintTop_toBottomOf="@id/ivPost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_navigate_next_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/ivPost"
        app:layout_constraintBottom_toBottomOf="@id/tvAbout"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:layout_marginEnd="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
